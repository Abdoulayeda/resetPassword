{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
     <div class="container">

    <div class="row mt-5 mb-5">
    {% for produit in produits %}
    <div class="col-lg-3 mt-5">
      <h3 class="card-title">{{ produit.nom}} </h3>       
       <div class="card-body">
       <a href="{{path('produit_show', {id: produit.id})}}"  > <img src="{{ vich_uploader_asset(produit, 'imageFile') }}", width="160px"; height="200px"; > </a>
       </div>
       <p>Prix:{{ produit.prix}} FCFA</p>
       <a href="{{path('produit_show', {id: produit.id})}}" class="btn btn-warning" >show</a>
       {# <a href="{{path('panier_add', {id: produit.id})}}" class="btn btn-success" ><h3>+</h3></a> #}
    </div>
    {% endfor %}
    <div>
      {% do produits.setPageRange(2) %}
      {{ knp_pagination_render(produits, 'paginate/paginate.html.twig') }}
    </div>


    </div>


     </div>
{% endblock %}
